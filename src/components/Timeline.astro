---
interface TimelineItem {
  date: string;
  title: string;
  content: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="timeline">
  {items.map((item) => (
    <div class="timeline-item">
      <div class="timeline-date">{item.date}</div>
      <div class="timeline-title">{item.title}</div>
      <div class="timeline-content">{item.content}</div>
    </div>
  ))}
</div>

