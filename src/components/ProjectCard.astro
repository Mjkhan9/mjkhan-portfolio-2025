---
interface Props {
  title: string;
  description: string;
  tech: string[];
  link: string;
  liveUrl?: string;
  githubUrl?: string;
}

const { title, description, tech, link, liveUrl, githubUrl } = Astro.props;
---

<div class="project-card">
  <h3 style="margin-top: 0; color: #f1f5f9; font-size: 1.25rem;">{title}</h3>
  <p style="color: #94a3b8; line-height: 1.6; margin-bottom: 1rem;">{description}</p>
  
  <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; margin-bottom: 1.5rem;">
    {tech.map((t) => (
      <span class="badge">{t}</span>
    ))}
  </div>
  
  <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
    <a href={link} class="primary-btn" style="font-size: 0.875rem; padding: 0.5rem 1rem;">
      View Case Study â†’
    </a>
    {liveUrl && (
      <a href={liveUrl} class="secondary-btn" style="font-size: 0.875rem; padding: 0.5rem 1rem;">
        Live Demo
      </a>
    )}
    {githubUrl && (
      <a href={githubUrl} class="secondary-btn" style="font-size: 0.875rem; padding: 0.5rem 1rem;">
        GitHub
      </a>
    )}
  </div>
</div>

