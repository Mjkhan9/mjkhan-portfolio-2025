---
interface Props {
  value: string;
  label: string;
  variant?: 'default' | 'aws' | 'gradient';
}

const { value, label, variant = 'default' } = Astro.props;

const valueClasses = {
  default: 'metric-value',
  aws: 'metric-value aws',
  gradient: 'metric-value gradient'
};
---

<div class="metric-card">
  <div class={valueClasses[variant]}>{value}</div>
  <div class="metric-label">{label}</div>
</div>

